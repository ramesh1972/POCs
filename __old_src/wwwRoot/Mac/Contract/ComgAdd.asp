	<script language="Javascript">
	
	function btnClick(fValue)
	{
	var i=fValue;
	if (i==1) {
		if(document.frmComgSelection.txtComgDesc.value==""){
			alert("Enter Commodity Description");
			document.frmComgSelection.txtComgDesc.focus();
			return false;}
		
		var lSdes=document.frmComgSelection.txtShortDesc.value;
		    
		
		if(document.frmComgSelection.txtShortDesc.value==""){
			alert("Enter Commodity Short Description");
			document.frmComgSelection.txtShortDesc.focus();
			return false;}
		
		
		if(lSdes.length!=3) {
		   alert("Enter Commodity Short Description Should be 3 characters only ");
		   document.frmComgSelection.txtShortDesc.focus();
		   return false;}
			
		else{
			document.frmComgSelection.action="ComgAddRes.asp";
			document.frmComgSelection.method="post";
			document.frmComgSelection.submit(); }}
		else if(i==2) {
			document.frmComgSelection.action="ComgMenu.asp";
			document.frmComgSelection.submit(); }
	}
	</script>
